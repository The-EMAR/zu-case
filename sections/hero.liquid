{% assign _blocks = section.blocks %}

{% if _blocks.size > 0 %}
  <script src="{{- 'swiper-bundle.min.js' | asset_url -}}" defer="defer"></script>
  <script src="{{- 'hero-slider.js' | asset_url -}}" defer="defer"></script>

  {{- 'swiper-bundle.min.css' | asset_url | stylesheet_tag -}}
  {{- 'hero.css' | asset_url | stylesheet_tag -}}
{% endif %}

{% if _blocks.size > 0 %}
  <section class="hero">
    <div class="hero__wrapper">
      <hero-slider class="swiper hero__slider">
        <div class="swiper-wrapper">
          {% for block in _blocks %}
            {% assign _block = block.settings %}

            {% if _block.image != blank %}
              <div class="swiper-slide" >
                <div class="hero__image">
                  {% if _block.link != blank %}
                    <a href="{{ _block.link }}">
                  {% endif %}
                    <img src="{{ _block.image | image_url: width: 1920 }}" width="1920" height="auto" loading="lazy" alt="">
                  {% if _block.link != blank %}
                    </a>
                  {% endif %}
                </div><!-- /.hero__image -->
              </div><!-- /.swiper-slide -->
            {% endif %}
          {% endfor %}
        </div><!-- /.swiper-wrapper -->

        <div class="swiper-pagination"></div><!-- /.swiper-pagination -->
      </hero-slider><!-- /.hero-slider -->
    </div><!-- /.hero__wrapper -->
  </section><!-- /.hero -->
{% endif %}

{% schema %}
  {
  "name": "Hero",
  "settings": [],
  "blocks": [
    {
      "name": "Slide",
      "type": "slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Hero"
    }
  ]
}  
{% endschema %}