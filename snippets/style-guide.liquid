{% style %}
  .container {
    max-width: 1220px;
    padding: 0 40px;
    margin: 0 auto;
  }

  /* Tablet */
  @media (max-width: 1023px) {
    .container {
      padding: 0 20px;
    }
  }

  /* Mobile */
  @media (max-width: 767px) {
    .container {
      padding: 0 10px;
    }
  }

  :root {
    --background-color: #000;
    
    --color-black: #000;
    --color-white: #fff;

    --box-shadow: 0 4px 10px 0 rgba(0, 0, 0, 0.25);
    --box-shadow-2: 0 4px 10px 0 #F1A615;
    --text-shadow: 0 4px 10px rgba(0, 0, 0, 0.25);

    --btn-primary: #F1A615;
    --btn-secondary: #000;

    --tag-primary: #F1A615;
    --tag-secondary: #ED15F1;
    --tag-alternative: #000;
  }
{% endstyle %}